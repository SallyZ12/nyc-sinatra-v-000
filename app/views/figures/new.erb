<h2> Add a New Figure </h2>

<form action= "/figures" method = "POST">

  <label> Figure Name </label>

  <input type= "text" name = "figure[name]" id = "figure_name">

</br></br>

<label> Create New Title </label>

<input type= "text" name = "title[name]" id = "new_title">
</br></br>

<label> Select Existing Title </label></br>

<%Title.all.each do |title|%>
<label> <%=title.name%> </label>
 <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>
<%end%>


</br></br>

  <label> Create New Landmark</label>
  <input type= "text" name = "landmark[name]" id = "new_landmark">


<label> Enter For Year New Landmark Completed </label>
  <input type= "text" name = "landmark[year_completed]">

</br></br>

  <label> Select Existing Landmark </label>
</br></br>
  <%Landmark.all.each do |landmark|%>
  <label> <%=landmark.name%> </label>
     <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
  <%end%>

</br></br>

  <input type = "submit" value = "Create New Figure" > </input>

</form>
