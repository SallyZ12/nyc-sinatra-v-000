<h2> Figure to Edit: <%=@figure.name%> </h2>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">


<h3> Name </h3>

<input type = "text" name = "figure[name]" value = "<%= @figure.name%>" id = "figure_name"></input>

</br><br>

<h3> Edit Landmark </h3>

<% Landmark.all.each do |landmark| %>
  <label> <%=landmark.name%> </label>
  <input type = "checkbox" name = "figure[landmark_ids][]" value = "<%= landmark.id%>" id = "<%=landmark.name%>"
  <%='checked' if @figure.landmarks.include?(landmark) %> </input>
  <%end%>

</br>
<h3> Add New Landmark </h3>

<input type = "text" name = "landmark[name]" id = "new_landmark"></input>


  <h3> Edit Title </h3>

  <% Title.all.each do |title| %>
    <label> <%=title.name%> </label>
    <input type = "checkbox" name = "figure[title_ids][]" value = "<%= title.id%>" id = "<%=title.name%>"
    <%='checked' if @figure.titles.include?(title) %> </input>
    <%end%>

  </br></br>

  <h3> Add New Title </h3>

  <input type = "text" name = "title[name]" id = "new_title"></input>


</br></br>

<input type = "submit" value = "Edit Figure"> </input>

 </form>
